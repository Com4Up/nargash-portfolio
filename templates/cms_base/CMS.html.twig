<script>
    function change(num) {
        if (num == 1) {
            $('.CMS_wrap').removeClass('active');
            $('#Presentation_cms').addClass('active');
        } else if (num == 2) {
            $('.CMS_wrap').removeClass('active');
            $('#Projets_cms').addClass('active');
        } else if (num == 3) {
            $('.CMS_wrap').removeClass('active');
            $('#Hobbies_cms').addClass('active');
        } else if (num == 4) {
            $('.CMS_wrap').removeClass('active');
            $('#Blog_cms').addClass('active');
        } else if (num == 5) {
            $('.CMS_wrap').removeClass('active');
            $('#Moderation_cms').addClass('active');
        }
    }
</script>

