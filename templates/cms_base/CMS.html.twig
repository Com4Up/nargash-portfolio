                        <div class="Skills_image">
                            <i class="{{skill.icone}}"></i>
                        </div>
                        <div class="Skills_Link">{{skill.name}}</div>
                        <div class="Article_Interaction">
                            <i class="fal fa-edit"></i>
                            <i class="fal fa-times"></i>
                        </div>
                    </div>
