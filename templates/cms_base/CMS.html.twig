{% endblock %}
{% block body %}
    <!-- CONTENU -->
    <div id="Zone">
        <nav id="cmsSwitch">
            <p onclick="change(1);">Présentation</p>
            <p onclick="change(2);">Projets</p>
            <p onclick="change(3);">Hobbies</p>
            <p onclick="change(4);">Articles</p>
