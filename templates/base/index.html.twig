                        var getUrl = window.location;
                        var json = JSON.parse(response.data);
                        var object = this;
                        this.timeline = [];

                        $.each(json, function (key, value) {
                            console.log(value);
                            object.timeline.push({"titre": value.titre, "description": value.description, "date": value.date});
                        });

                    })
                }
            },
            mounted: function () {
                this.getTimeline();
            }
        })
    </script>
